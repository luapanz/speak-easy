<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <h5 class="location-header">Campaigns</h5>
    </div>
    <div class="col-9">
      <% if @user.role == Role::OWNER || @user.role == Role::MARKETING %>
        <a href="<%= new_campaign_path %>" class="btn btn-primary new-location-button float-right">
          + New Campaign
        </a>
      <% end %>
    </div>
  </div>
  <hr class="location_line"/>

  <div id="metrics">
    <%= render partial: 'campaigns/metrics' %>
  </div>

  <div id="currentcampaigns">
    <%= render partial: 'campaigns/currentmonthactivecampaigns'%>
  </div>

</div>

<script src = "https://deploy.userpilot.io/24xk34u10.js"></script>
<script>
  userpilot.identify(

    "<%= @user.objectId %>", // Used to identify users
    {
     name: "<%= @user.firstname %> <%= @user.lastname %>", // Full name
     email: "<%= @user.email %>",
     created_at: "<%= @user.createdAt %>"// Email address
    }
  );
</script>

<!-- Modal -->
<div class="modal fade" id="noLocationModal" tabindex="-1" role="dialog" aria-labelledby="Missing Location">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Missing a Location</h4>
      </div>
      <div class="modal-body">
        <p class="card-text">
          Before you can create your first Campaign you must create a Location.
          To do this, simply go to the left side of your web page and click on Locations.
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="noLocationAccept">Done</button>
      </div>
    </div>
  </div>
</div>
