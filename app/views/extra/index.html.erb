<div class="container profile">
  <div class="page-header">
    <h1>Account</h1>
  </div>
  <%= simple_form_for @current_user,
                      :url => wizard_path,
                      :method => :put,
                      :html => {:class => 'form-horizontal user-form'},
                      wrapper: :horizontal_form,
                      wrapper_mappings: {
                          file: :horizontal_file_input,
                      } do |f| %>
    <fieldset>
      <legend><span>Account Info</span></legend>
      <%= f.input :username, :readonly => true %>
    </fieldset>
    <fieldset>
      <legend><span>Personal Info</span></legend>
      <%= f.input :firstname, :label => "First Name", :required => true %>
      <%= f.input :lastname, :label => "Last Name", :required => true %>
      <%= f.input :email, :readonly => true%>
      <div class="form-group">
        <label class="col-sm-3 control-label">Country</label>
        <div class="col-sm-6">
          <%= country_select('user', 'country',
                             {
                                 include_blank: 'Select a country',
                                 priority_countries: ['US']
                             },
                             {
                                 id: 'countries',
                                 class: 'form-control',
                                 required: true
                             }) %>
        </div>
      </div>
      <%= f.input :photo, :label => "Profile Picture", as: :file %>
      <div class="form-group">
        <div class="col-sm-6 col-sm-offset-3" id="user_photo_preview"></div>
      </div>
    </fieldset>
    <fieldset>
      <legend><span>Business Info</span></legend>
      <%= f.input :business_name, :label => "Business Name", :required => true %>
      <%= f.input :phone, :label => "Business Phone", :required => true %>
    </fieldset>
    <div class="row">
      <div class="col-md-2 col-xs-7 col-md-offset-3">
        <%= f.button :submit, 'Go to next step', :class => 'btn-block btn-success' %>
      </div>
    </div>
  <% end %>
</div>