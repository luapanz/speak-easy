<div class="modal fade" id="StripeModalPlan" tabindex="-1" role="dialog" aria-labelledby="Stripe Modal" show style="background: rgba(0, 0, 0, .7);">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Checkout</h5>
      </div>
      <div class="modal-body">
        <div>

        <div class="stripe_payment_section">
          <div id="card-element">
            <!-- A Stripe Element will be inserted here. -->
          </div>

          <!-- Used to display Element errors. -->
          <div id="card-errors" role="alert"></div>

          <%= hidden_field_tag :plan_id, params[:plan_id] %>
        </div>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn">Purchase</button>
      </div>
    </div>
  </div>
</div>
